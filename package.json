  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "cross-env": "^5.1.1",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.0"
  },
  "dependencies": {
    "jwt-decode": "^2.2.0",
    "mitt": "^1.1.2",
    "preact": "^8.2.1",
    "preact-portal": "^1.1.2",
    "preact-router": "^2.5.5",
    "unfetch": "^3.0.0"
  }
}
